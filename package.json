{
  "name": "@supernal/universal-command",
  "version": "0.1.0",
  "type": "module",
  "description": "Define commands once, deploy to CLI, API, and MCP automatically",
  "keywords": [
    "cli",
    "api",
    "mcp",
    "command",
    "abstraction",
    "code-generation",
    "commander",
    "nextjs",
    "model-context-protocol"
  ],
  "author": "Supernal Intelligence <dev@supernal.ai>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/supernalintelligence/universal-command.git"
  },
  "bugs": {
    "url": "https://github.com/supernalintelligence/universal-command/issues"
  },
  "homepage": "https://github.com/supernalintelligence/universal-command#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./codegen": {
      "types": "./dist/codegen/index.d.ts",
      "import": "./dist/codegen/index.js",
      "require": "./dist/codegen/index.cjs"
    },
    "./generators": {
      "types": "./dist/generators/index.d.ts",
      "import": "./dist/generators/index.js",
      "require": "./dist/generators/index.cjs"
    },
    "./mcp": {
      "types": "./dist/mcp/index.d.ts",
      "import": "./dist/mcp/index.js",
      "require": "./dist/mcp/index.cjs"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js",
      "require": "./dist/testing/index.cjs"
    },
    "./runtime": {
      "types": "./dist/runtime/index.d.ts",
      "import": "./dist/runtime/index.js",
      "require": "./dist/runtime/index.cjs"
    },
    "./scopes": {
      "types": "./dist/scopes/index.d.ts",
      "import": "./dist/scopes/index.js",
      "require": "./dist/scopes/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ci": "vitest run",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "prepublishOnly": "pnpm run build && pnpm run test:ci",
    "prepare": "husky"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "commander": "^12.0.0",
    "express": "^4.0.0 || ^5.0.0",
    "next": "^14.0.0 || ^15.0.0"
  },
  "peerDependenciesMeta": {
    "commander": {
      "optional": true
    },
    "next": {
      "optional": true
    },
    "@modelcontextprotocol/sdk": {
      "optional": true
    },
    "express": {
      "optional": true
    }
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "fs-extra": "^11.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "commander": "^12.0.0",
    "eslint": "^8.55.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "next": "^15.0.0",
    "prettier": "^3.7.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
